<!DOCTYPE html>
<html>
<head>

  <script src="https://unpkg.com/vue"></script>
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

  <link rel="stylesheet" type="text/css" href="css/main.css">
  <title>Siri Law BR</title>

</head>
<body>

<div id="div-parent">
  <div id="div-top">
    <div id="div-img-center">
      <img src="imgs/cute_robot1.jpg"></img>
    </div>
    <span id="claim-field">
      <input v-model="claimData" type="text" name="claim-field" :placeholder="phValue" v-on:keydown="ajaxSearch">
      <p v-if="outputBool">Searching: {{ claimData }}</p>
    </span>
    <span id="sw-field">
      <input v-model="claimDataSW" type="text" name="claim-sw" disabled v-if="resultsBool"> 
    </span> 
  </div>
  <div id="div-bottom">
    <div id="results-search" v-if="resultsBool">
      Results:<br>
      <p><pre>{{ results }}</pre></p>
    </div>
  </div>
</div>

<script type="text/javascript">
var app = new Vue({
  el: '#div-parent',
  data: {
    claimData: "",
    claimDataSW: "",
    outputBool: false,
    resultsBool: false,
    phValue: "Olá! Como posso ajuda-lo?",
    results: "",
    hits: ""
  },
  watch: {
    claimData: function(event){
      if(app.claimData){
        app.outputBool= true; 
      }else{
        app.outputBool= false; 
        app.phValue = "Olá! Como posso ajuda-lo?"
      }
    }
  },
  methods: {
    ajaxSearch: function(e){
      if((e.key == "Enter") && (app.claimData != "")){
        app.removeSW();
        config = {
          headers: {
            'Access-Control-Allow-Origin': '*'
  //          'Access-Control-Allow-Methods': 'GET, POST, OPTIONS, PUT, PATCH, DELETE',
  //          'Access-Control-Allow-Headers': 'Origin, Content-Type, X-Auth-Token',
          }
          /*data: {
            index: 'cdc',
            body: {
              query: {
                match: {"content": app.claimData }
              }
            }
          }*/
        };

//        axios.get('http://localhost:9200/?pretty', config).then(function (res){
//        axios.post('http://localhost:8081/search', config).then(function (res){
        axios.get('http://localhost:9200/cdc/_search?q='+app.claimData, config).then(function (res){
          app.hits = res.data.hits
          //app.results = hits;

          app.resultsBool = true;
          if(app.hits.total > 0){
            app.hits.hits.forEach(function(val, i){
              app.results += val._source.content;
              app.results += "\n"
            });
          }else{
            app.results = "Nothing was found. Try again with different claim."
            app.delayedRemoveResults();
          }
          //console.log(res.data);
          app.claimData = "";
        }).catch(function (error){
            console.log(error);
            alert("Sorry an error ocurred trying to connect the elasticsearch.");
        });
      }
    },
    removeSW: function(){
      axios.post('/ajax/stopwordsremoval', {
        claim: app.claimData
      })
      .then(function (res){
        console.log(res.data);
        app.claimDataSW = "Keywords: "+res.data;
        //console.log(res.data.claim);
      })
      .catch(function(err){
        console.log(err);
      });
    },
    delayedRemoveResults: function(){
      setTimeout(function(){
          app.resultsBool = false;
          app.results = "";
      }, 5000);
    }
  }
})

</script>

</body>
</html>
